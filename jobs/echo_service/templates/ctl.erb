#!/bin/bash

RUN_DIR=/var/vcap/sys/run/echo_service
LOG_DIR=/var/vcap/sys/log/echo_service
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    # FIXME wtf is this?
    cd /var/vcap/packages/ardo_app

    # FIXME Do we set up the virtualenv here?
    export PATH=/var/vcap/packages/ruby_1.9.3/bin:$PATH

    # FIXME change to python command.
    exec /var/vcap/packages/ruby_1.9.3/bin/bundle exec \
      rackup -p <%= properties.web_ui.port %> \
      >>  $LOG_DIR/echo_service.stdout.log \
      2>> $LOG_DIR/echo_service.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
