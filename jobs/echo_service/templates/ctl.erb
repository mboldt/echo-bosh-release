#!/bin/bash

RUN_DIR=/var/vcap/sys/run/echo_service
LOG_DIR=/var/vcap/sys/log/echo_service
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    cd /var/vcap/packages/echo_service
    export PATH=/var/vcap/packages/python_2.7.12/bin:$PATH
    exec python echo.py

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
